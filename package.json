{
  "name": "rentikpro",
  "private": true,
  "version": "2.1.4",
  "type": "module",
  "scripts": {
    "dev:web": "vite",
    "build:web": "vite build",
    "dev:tauri": "VITE_TARGET=tauri vite",
    "build:tauri": "npm run prepare:sqljs && node scripts/generate-version.js && VITE_TARGET=tauri vite build",
    "release:mac": "rm -rf dist && npm run build:tauri && bash scripts/check-tauri-build.sh && npm run tauri -- build",
    "prepare:sqljs": "node scripts/prepare-sqljs.js",
    "sync:tauri-version": "node scripts/sync-tauri-version.js",
    "dev": "npm run prepare:sqljs && vite",
    "build": "npm run prepare:sqljs && node scripts/generate-version.js && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "deploy": "npm version patch --no-git-tag-version && npm run build && wrangler pages deploy dist --project-name rentikpro2",
    "smoke": "npm run build && npx playwright test tests/smoke.spec.ts",
    "smoke:pricing": "tsx scripts/smoke-pricing-studio.ts",
    "tauri": "tauri",
    "tauri:dev": "npm run sync:tauri-version && tauri dev",
    "tauri:build": "npm run sync:tauri-version && tauri build",
    "mac:build": "npm ci && npm run build && npx tauri build",
    "mac:verify": "bash scripts/macos-verify.sh",
    "mac:notarize": "bash scripts/macos-notarize.sh"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@types/jszip": "^3.4.0",
    "@vitejs/plugin-react": "^4.3.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "sonner": "^2.0.7",
    "sql.js": "^1.10.3",
    "tesseract.js": "^5.0.5",
    "vite": "^5.2.11",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@playwright/test": "^1.42.0",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.15.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.19",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
