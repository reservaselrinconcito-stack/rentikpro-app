
{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "RentikPro",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$DOCUMENT/*", "$CACHE/*", "$HOME/*"]
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "sql": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.rentikpro.app",
      "targets": "all"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "RentikPro",
        "width": 1080
      }
    ]
  }
}
