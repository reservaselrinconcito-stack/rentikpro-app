{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RentikPro",
  "version": "2.0.9",
  "identifier": "com.rentikpro.app",
  "build": {
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build:tauri",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "RentikPro",
        "width": 1080,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "dmg"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}