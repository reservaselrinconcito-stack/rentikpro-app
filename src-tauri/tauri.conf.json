{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RentikPro",
  "version": "0.1.0",
  "identifier": "com.rentikpro.app",
  "build": {
    "beforeDevCommand": "npm run dev -- --port 3000",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RentikPro",
        "width": 1080,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
